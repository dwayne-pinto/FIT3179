{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 850,
  "height": 400,
  "title": "Respiratory health index",
  "data": {
    "url": "https://raw.githubusercontent.com/dwayne-pinto/FIT3179/main/bubble_chart.csv"
  },
"transform": [
    {"filter": "continent_select == null || datum.Continent == continent_select"}
  ],
  "params": [
    {
      "name": "pts", "select": "point"
    },
    {
      "name": "continent_select",
      "bind":{
        "input": "select",
        "options":[
          null,
          "Eastern Mediterranean",
          "Africa",
          "Europe",
          "Western Pacific",
          "South-East Asia",
          "Americas"
        ],
        "labels": [
          "All",
          "Eastern Mediterranean",
          "Africa",
          "Europe",
          "Western Pacific",
          "South-East Asia",
          "Americas"
        ],
        "name": "Continent: "
      }
      }
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "PPM",
      "type": "quantitative",
      "title": "Air particulate concentration (PPM)"
    },
    "y":{
      "field": "Disability-Adjusted Life Years",
      "type": "quantitative",
      "title": "Disability-Adjusted Life Years per 100,000 Population (DALYs)",
      "scale": {"type": "log", "domain": [500, 10000]}
    },
    "size":{
      "field": "Deaths",
      "type": "quantitative",
      "scale":{
        "type":"threshold",
        "domain": [100, 1000, 100000, 1000000],
        "range":[10, 50, 150, 800, 1500]
        }
    },
    "color": {
      "field": "Continent",
      "scale": {"scheme":"category10"}
      },
      "opacity": {
      "condition": {"param": "pts", "value": 1},
      "value": 0.3
    },
    "tooltip":[
      {"field": "Country"},
      {"field": "PPM", "format":".2f"},
      {"field": "Deaths", "format":",.0f"},
      {
        "field": "Disability-Adjusted Life Years",
        "title": "DALYs",
        "format":",.0f"
      }
  ]
  }
}
